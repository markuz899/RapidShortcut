{
  "manifest_version": 2,

  "name": "SHORTCUTTER",
  "description": "Copy to clipboard shortcut",
  "version": "1.0",
  "author": "Markuz",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Rapid copy"
  },
  "permissions": [
    "activeTab",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ]
}
